@using Microsoft.AspNetCore.Localization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce.MvcClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ECommerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer["Products"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">@SharedLocalizer["ShoppingCart"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="navbar-text d-flex align-items-center">
                        <form asp-controller="Home" asp-action="SetRegion" method="post" class="d-flex me-3">
                            <span class="me-2">@SharedLocalizer["Region"]:</span>
                            <select name="regionCode" onchange="this.form.submit()" class="form-select form-select-sm">
                                @foreach (var region in ViewBag.Regions)
                                {
                                    <option value="@region.Item1" selected="@(region.Item1 == ViewBag.CurrentRegion)">@region.Item2</option>
                                }
                            </select>
                        </form>

                        @* Language Selector *@
                        @{
                            var culture = Context.Features.Get<IRequestCultureFeature>();
                            var currentCulture = culture.RequestCulture.UICulture;
                            var cultureItems = new List<SelectListItem>
                        {
                        new SelectListItem { Value = "en-US", Text = "English", Selected = (currentCulture.Name == "en-US") },
                        new SelectListItem { Value = "vi-VN", Text = "Tiếng Việt", Selected = (currentCulture.Name == "vi-VN") },
                        new SelectListItem { Value = "zh-CN", Text = "简体中文", Selected = (currentCulture.Name == "zh-CN") }
                        };
                        }
                        <form id="cultureForm" asp-controller="Home" asp-action="SetLanguage" method="post" class="d-flex">
                            @* Truyền returnUrl bao gồm cả QueryString để giữ nguyên tham số *@
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <span class="me-2">@SharedLocalizer["Language"]:</span>
                            <select name="culture" onchange="this.form.submit()" class="form-select form-select-sm">
                                @foreach (var cultureItem in cultureItems)
                                {
                                    <option value="@cultureItem.Value" selected="@cultureItem.Selected">@cultureItem.Text</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            @if (TempData["LocationSet"] != null)
            {
                <div class="alert alert-info">@TempData["LocationSet"]</div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ECommerce.MvcClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (navigator.geolocation && !sessionStorage.getItem('locationSet')) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var latitude = position.coords.latitude;
                    var longitude = position.coords.longitude;
                    $.post('/Home/SetCustomerLocation', {
                        latitude: latitude,
                        longitude: longitude,
                        currentRegion: '@ViewBag.CurrentRegion'
                    }).done(function () {
                        sessionStorage.setItem('locationSet', 'true');
                        // No need to reload here, as location setting is less critical than currency/language
                    }).fail(function () {
                        console.error('Failed to send location to server.');
                    });
                }, function (error) {
                    console.warn('Geolocation denied or failed:', error.message);
                });
            }
        });
    </script>
</body>
</html>